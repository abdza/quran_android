<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="6dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/related_arabic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textColor="@color/word_card_arabic_text"
        tools:text="رَحْمَة" />

    <TextView
        android:id="@+id/related_translation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:textSize="14sp"
        android:textColor="@color/word_card_translation_text"
        android:layout_marginStart="12dp"
        tools:text="mercy" />

    <TextView
        android:id="@+id/related_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/word_card_transliteration_text"
        android:layout_marginStart="8dp"
        tools:text="2:157" />

</LinearLayout>
